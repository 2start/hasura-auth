{
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "types/**/*.ts"
  ],
  "compilerOptions": {
    "lib": [
      "dom",
      "es2020"
    ],
    "paths": {
      "*": [
        "types/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@middleware/*": [
        "src/middleware/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "src/*": [
        "src/*"
      ],
      "test/*": [
        "test/*"
      ]
    },
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "target": "es2019",
    "baseUrl": ".",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "resolveJsonModule": false,
    "inlineSourceMap": true,
  }
}